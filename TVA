prixHt = float(input("Veuillez saisir le prix hors taxe :"))

print("Pour une TVA de 5,5 %, saisissez 1")
print("Pour une TVA de 19,6 %, saisissez 2")
print("Pour une TVA de 33 %, saisissez 3")


reponse = int(input("Veuillez saisir un nombre :"))

if reponse == 1 :
   prixTTC1 = prixHt * 5.5 / 100
   prixTTCTotal = prixHt + prixTTC1
   print(f"Le prix Ht est de {prixHt}, la TVA est de 5,5% et le prix TTC est de {prixTTCTotal}")
elif reponse == 2 :
   prixTTC2 = prixHt * 19.6 / 100
   prixTTCTotal2 = prixHt + prixTTC2
   print(f"Le prix Ht est de {prixHt}, la TVA est de 19,6% et le prix TTC est de {prixTTCTotal2}")
elif reponse == 3 :
   prixTTC3 = prixHt * 33 / 100
   prixTTCTotal3 = prixHt + prixTTC3
   print(f"Le prix Ht est de {prixHt}, la TVA est de 33% et le prix TTC est de {prixTTCTotal3}")
else :
   print("Vous avez entré une mauvaise réponse")

